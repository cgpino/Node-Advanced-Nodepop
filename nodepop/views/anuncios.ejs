<!DOCTYPE html>

  <% include header.ejs %>

  <input type="button" value="Volver a Inicio" onclick="location.reload();location.href='/'"/>
  <h3>Listado de anuncios:</h3>
  <ul>
    <% anuncios.forEach(anuncio => {  %>
      <li>
        <p><b>Artículo:</b> <%= anuncio.nombre %></p>
        <p><b>Tipo: </b>
          <% if (anuncio.venta) { %>
            Se vende
          <% } else { %>
            Se busca
          <% } %>
        </p>
        <p><b>Precio:</b> <%= anuncio.precio %> €</p>
        <p><b>Etiquetas: </b>
          <% anuncio.tags.forEach(tag => {  %>
            <%= tag %>
          <% }) %>
        </p>
        <img src="images/anuncios/<%= anuncio.foto %>" alt="Foto Articulo" width="250" height="200">
      </li>
      <br>
    <% }) %>
  </ul>
  
  <% include footer.ejs %>